# YouTube Transcription Service Configuration

# Deployment mode
MODE=api                              # api or cli

# Google Cloud Configuration
GCS_BUCKET_NAME=your-bucket-name      # Your Google Cloud Storage bucket
VERTEX_PROJECT_ID=your-project-id     # Your Google Cloud Project ID
VERTEX_AI_MODEL=gemini-2.0-flash      # Default Vertex AI model (or auto-detect)

# API Configuration  
API_HOST=0.0.0.0                      # API host (0.0.0.0 for Docker)
API_PORT=8000                         # API port

# Processing Configuration
SYNC_SIZE_LIMIT_MB=10                 # Sync vs async processing threshold
MAX_DURATION_SECONDS=1800             # Maximum video duration (30 minutes)
MAX_CONCURRENT_JOBS=5                 # Maximum concurrent jobs

# Speech Recognition
LANGUAGE_CODE=hu-HU                   # Speech recognition language code
ENABLE_PUNCTUATION=true               # Enable automatic punctuation
ENABLE_WORD_OFFSETS=true              # Enable word time offsets

# Pause Detection Thresholds (seconds)
PAUSE_MIN=0.3                         # Minimum pause to detect
PAUSE_SHORT=0.6                       # Short pause threshold (•)
PAUSE_LONG=1.5                        # Long pause threshold (••)
PAUSE_PARAGRAPH=3.0                   # Paragraph break threshold

# File Paths (Docker defaults)
TEMP_DIR=/app/temp                    # Temporary files directory
DATA_DIR=/app/data                    # Output files directory

# FFmpeg Configuration
FFMPEG_SAMPLE_RATE=16000              # Audio sample rate for conversion
FFMPEG_CHANNELS=1                     # Audio channels (mono)

# Logging
LOG_LEVEL=INFO                        # DEBUG, INFO, WARNING, ERROR