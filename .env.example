# YouTube Transcription Service Configuration

# Deployment mode
MODE=api                              # api or cli

# Google Cloud Configuration
GCS_BUCKET_NAME=your-bucket-name      # Your Google Cloud Storage bucket
VERTEX_PROJECT_ID=your-project-id     # Your Google Cloud Project ID
VERTEX_AI_MODEL=gemini-2.0-flash      # Default Vertex AI model (or auto-detect)

# API Configuration  
API_HOST=0.0.0.0                      # API host (0.0.0.0 for Docker)
API_PORT=8000                         # API port

# Processing Configuration
SYNC_SIZE_LIMIT_MB=10                 # Sync vs async processing threshold
MAX_DURATION_SECONDS=1800             # Maximum video duration (30 minutes)
MAX_CONCURRENT_JOBS=5                 # Maximum concurrent jobs

# Speech Recognition
LANGUAGE_CODE=hu-HU                   # Speech recognition language code
ENABLE_PUNCTUATION=true               # Enable automatic punctuation
ENABLE_WORD_OFFSETS=true              # Enable word time offsets

# Pause Detection Thresholds (seconds)
PAUSE_MIN=0.3                         # Minimum pause to detect
PAUSE_SHORT=0.6                       # Short pause threshold (•)
PAUSE_LONG=1.5                        # Long pause threshold (••)
PAUSE_PARAGRAPH=3.0                   # Paragraph break threshold

# File Paths (Docker defaults)
TEMP_DIR=/app/temp                    # Temporary files directory
DATA_DIR=/app/data                    # Output files directory

# FFmpeg Configuration
FFMPEG_SAMPLE_RATE=16000              # Audio sample rate for conversion
FFMPEG_CHANNELS=1                     # Audio channels (mono)

# Logging
LOG_LEVEL=INFO                        # DEBUG, INFO, WARNING, ERROR

# ==============================================================================
# DUBBING FEATURE CONFIGURATION
# ==============================================================================

# Translation Configuration
ENABLE_TRANSLATION=true               # Enable translation feature
DEFAULT_TARGET_LANGUAGE=en-US         # Default target language for translation
DEFAULT_TRANSLATION_CONTEXT=casual   # Default translation context (legal, spiritual, marketing, etc.)

# ElevenLabs TTS Configuration  
ELEVENLABS_API_KEY=your_api_key_here  # ElevenLabs API key (required for dubbing)
ELEVENLABS_DEFAULT_VOICE=pNInz6obpgDQGcFmaJgB  # Default ElevenLabs voice ID
ELEVENLABS_MODEL=eleven_multilingual_v2        # ElevenLabs model to use
ELEVENLABS_BASE_URL=https://api.elevenlabs.io/v1  # ElevenLabs API base URL

# Video Processing Configuration
MAX_VIDEO_LENGTH_MINUTES=30           # Maximum video length for dubbing (minutes)
TEMP_VIDEO_DIR=/app/temp/videos       # Temporary directory for video files
ENABLE_VIDEO_PREVIEW=true             # Enable video preview generation

# Dubbing Quality Configuration
TARGET_AUDIO_QUALITY=high             # Audio synthesis quality: low, medium, high
ENABLE_AUDIO_OPTIMIZATION=true        # Enable audio level optimization
VIDEO_OUTPUT_FORMAT=mp4               # Final video output format

# Text Chunking Configuration (for long transcripts)
CHUNKING_ENABLED=true                 # Enable automatic text chunking for long content
CHUNK_SIZE=4000                       # Characters per chunk (recommended: 3000-5000)
CHUNK_OVERLAP=200                     # Character overlap between chunks
MAX_CHUNKS=20                         # Maximum number of chunks per job (safety limit)
MAX_TRANSCRIPT_LENGTH=5000            # Max chars for single-pass processing

# Cost Management
MAX_DUBBING_COST_USD=10.00           # Maximum cost per dubbing job (safety limit)
ENABLE_COST_ESTIMATION=true          # Show cost estimates before processing
DUBBING_QUOTA_RESET_HOUR=0           # Hour when daily quotas reset (0-23)

# ==============================================================================
# TTS PROVIDER CONFIGURATION
# ==============================================================================

# TTS Provider Selection
TTS_DEFAULT_PROVIDER=auto            # elevenlabs | google_tts | auto
TTS_AUTO_SELECTION_COST_FIRST=true   # Prioritize cost-effective providers in auto mode
TTS_FALLBACK_ENABLED=true            # Enable automatic fallback between providers
TTS_COST_OPTIMIZATION=true           # Prefer cost-effective providers when auto

# Google Cloud Text-to-Speech Configuration
GOOGLE_TTS_ENABLED=true              # Enable Google TTS provider
GOOGLE_TTS_REGION=us-central1        # Google TTS API region (us-central1, us-east1, europe-west4)
GOOGLE_TTS_DEFAULT_VOICE=hu-HU-Wavenet-A  # Default Hungarian voice for local content
GOOGLE_TTS_AUDIO_PROFILE=telephony-class-application  # Audio optimization profile
GOOGLE_TTS_QUALITY_PREFERENCE=neural2 # Voice quality: standard | wavenet | neural2 | studio
GOOGLE_TTS_TIMEOUT_SECONDS=300       # API timeout
GOOGLE_TTS_MAX_RETRIES=3             # Retry attempts on failure
GOOGLE_TTS_SPEAKING_RATE=1.0         # Speaking rate (0.25 to 4.0)
GOOGLE_TTS_PITCH=0.0                 # Voice pitch adjustment (-20.0 to 20.0)
GOOGLE_TTS_VOLUME_GAIN_DB=0.0        # Audio volume gain in dB

# TTS Quality & Performance Settings
TTS_QUALITY_PREFERENCE=balanced      # cost_optimized | balanced | premium
TTS_SYNTHESIS_TIMEOUT=300            # Synthesis timeout per request
TTS_CHUNK_SIZE_CHARS=1000            # Character limit per synthesis chunk
TTS_PARALLEL_SYNTHESIS=true          # Enable parallel chunk processing

# Job Processing Configuration
JOB_TIMEOUT_SECONDS=1800             # Maximum job processing time (30 minutes)
CLEANUP_AFTER_HOURS=24               # Auto-cleanup temporary files after N hours
RETRY_ATTEMPTS=3                     # Number of retry attempts for failed operations

# Performance & Monitoring
ENABLE_PERFORMANCE_LOGGING=true      # Log performance metrics
MEMORY_LIMIT_MB=4096                 # Memory limit per job (4GB default)
ENABLE_HEALTH_CHECKS=true            # Enable health check endpoints